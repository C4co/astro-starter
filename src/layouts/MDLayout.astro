---
import Layout from './Layout.astro'

const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title}>
  <main
    class="w-full min-h-screen dark:bg-slate-900 flex justify-center py-[40px] px-4"
  >
    <div
      class="prose prose-blue prose-slate dark:prose-invert max-w-[720px] min-w-0"
    >
      <slot />
    </div>
  </main>
</Layout>
